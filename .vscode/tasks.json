{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "luacheck",
            "type": "shell",
            "command": "/usr/local/bin/luacheck . | tee report.log",
            "problemMatcher": {
                "owner": "lua",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^\\s*(.*):(\\d+):(\\d+):\\s*(.*)\\s*$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            }
        },
        {
            "label": "l10n",
            "type": "shell",
            "command": "python3 ./scripts/l10n_strings.py --parser",
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(Info|Warning):(.*\\.lua):(.*)$",
                    "severity": 1,
                    "file": 2,
                    "message": 3
                }
            }
        },
        {
            "label": "release",
            "type": "shell",
            "command": "source ~/.bash_wow && clm_release",
            "problemMatcher": []
